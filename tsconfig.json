{
    "compilerOptions": {
        "target": "es2020",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "allowJs": true,
        "checkJs": false,
        "jsx": "react-jsx",
        "types": ["vite/client", "jquery", "bootstrap"]
    },
    "include": ["resources/js/**/*"],
    "exclude": ["node_modules"]
}
